# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/fiscal_guard

# JWT
JWT_SECRET_KEY=your-secret-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=10080

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# Frontend URL (where to redirect after OAuth)
FRONTEND_URL=http://localhost:5173

# Strands AI Configuration
STRANDS_DEFAULT_MODEL=gemini-2.5-flash
STRANDS_VISION_MODEL=gemini-2.5-flash

# Google AI (for Gemini)
GOOGLE_API_KEY=your-google-api-key

# Opik (via OpenTelemetry)
# For Opik Cloud (https://www.comet.com/opik)
OTEL_EXPORTER_OTLP_ENDPOINT=https://www.comet.com/opik/api/v1/private/otel
# Replace <your-api-key> and optionally add projectName=<project-name>
OTEL_EXPORTER_OTLP_HEADERS="Authorization=<your-api-key>,Comet-Workspace=default,projectName=<your-project-name>"
# Set to 'true' to enable tracing, 'false' to disable
OPIK_TRACING_ENABLED=false

VITE_API_URL="http://localhost:8000"

# For extension
VITE_GOOGLE_CLIENT_ID="your-google-client-id"


# Evals
# Opik Configuration
OPIK_API_KEY=your-opik-api-key
OPIK_WORKSPACE=your-workspace-name

# LLM Judge Model (for eval metrics)
# Uses LiteLLM format: https://docs.litellm.ai/docs/providers
# Examples:
#   - gemini/gemini-2.0-flash-exp (fast, cheap)
#   - gemini/gemini-2.5-flash (recommended)
#   - gpt-4o-mini (OpenAI)
#   - claude-3-5-haiku-20241022 (Anthropic)
EVALS_LLM_MODEL=gemini/gemini-2.5-flash
EVALS_STATE_JUDGE_MODEL=gemini/gemini-2.5-flash

# Internal API (for evaluation testing)
ALLOW_INTERNAL_ENDPOINTS=true
INTERNAL_API_TOKEN=your-secret-token-here
